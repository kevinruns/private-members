
<div class="d-flex align-items-center justify-content-center">
<div class="container">

  <div class="row">  
    <div class="my-3">
      <h1>Welcome to events</h1>
    </div>
  </div>  

  <div class="row">  
    <div class="col align-self-center gy-5">
      <h3>Upcoming events</h3>
      <% events_ordered = @events.future.order(event_on: :asc) %>
      <%= render partial: "events/list", locals: {events: events_ordered} %>
    </div>
  </div>

  <div class="row">  
    <div class="col align-self-center gy-5">
      <h3>Past events</h3>
      <% events_ordered = @events.past.order(event_on: :asc) %>
      <%= render partial: "events/list", locals: {events: events_ordered} %>
    </div>
  </div>



  <div class="row">

   <div class="col align-self-center gy-5">

    <% if Current.user %>
      <%= link_to "Create event", new_event_path , class: "nav-link" %>
      <%= link_to "My events", Current.user, class: "nav-link" %>
    <% end %>
    </div>
  </div>

</div>
</div>
