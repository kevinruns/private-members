
<div class="d-flex align-items-center justify-content-center">
<div class="container">

  <div class="row">  
    <div class="my-3">
      <h1>Welcome to events</h1>
    </div>
  </div>  

  <div class="row">  
    <div class="col align-self-center gy-5">

      <% if @events.empty? %>
        <p>No events registered</p>
      <% else %>

      <table class="table">
        <thead>
          <tr>
            <th scope="col">Name</th>
            <th scope="col">Location</th>
            <th scope="col">Date</th>
          </tr>
        </thead>
        <tbody>
          <% @events.each do |f| %>
          <tr>
            <th scope="row"><%= f.name %></th>
            <td><%= f.location %></td>           
            <td><%= f.event_on %></td>
          </tr>
        </tbody>
        <% end %>
      </table>

    <%end %>

    </div>
  </div>

  <div class="row">

   <div class="col align-self-center gy-5">

    <% if Current.user %>
      <%= link_to "Create Event", events_new_path, class: "nav-link" %>
      <%= link_to Current.user.username, Current.user, class: "nav-link" %>
    <% end %>
    </div>
  </div>

</div>
</div>
